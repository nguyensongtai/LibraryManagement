@model LibraryManagement.Models.BookTitle

@{
  ViewData["Title"] = "Delete Book";
}

<h1>Delete Book</h1>

<h3>Are you sure you want to delete this book?</h3>

<div>
  <h4>Book Details</h4>
  <dl class="row">
    <dt class="col-sm-2">
      Title
    </dt>
    <dd class="col-sm-10">
      @Model.Title
    </dd>
    <dt class="col-sm-2">
      Publisher
    </dt>
    <dd class="col-sm-10">
      @Model.Publisher?.Name
    </dd>
  </dl>

  <form asp-action="Delete" method="post">
    <input type="hidden" asp-for="BookTitleId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
  </form>
</div>
