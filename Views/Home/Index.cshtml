@{
  ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <h1 class="mb-4">Welcome to the Library Management System</h1>
    </div>
  </div>

  <div class="row g-4">
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h5 class="card-title">Books</h5>
          <p class="card-text">Manage the list of books in the library.</p>
          <a href="/bookTitles" class="btn btn-primary">Go to Books</a>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h5 class="card-title">Readers</h5>
          <p class="card-text">Manage the list of readers in the library.</p>
          <a href="/readers" class="btn btn-primary">Go to Readers</a>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h5 class="card-title">Publishers</h5>
          <p class="card-text">Manage the list of publishers in the library.</p>
          <a href="/publishers" class="btn btn-primary">Go to Publishers</a>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-4 mt-4">
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h5 class="card-title">Libraries</h5>
          <p class="card-text">Manage the library branches.</p>
          <a href="/libraries" class="btn btn-primary">Go to Libraries</a>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h5 class="card-title">Loans</h5>
          <p class="card-text">Track book loans and returns.</p>
          <a href="/bookLoans" class="btn btn-primary">Go to Loans</a>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h5 class="card-title">Book Inventory</h5>
          <p class="card-text">Track Book Inventory and returns.</p>
          <a href="/bookCopies" class="btn btn-primary">Go to Book Inventory</a>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h5 class="card-title">Book Authors</h5>
          <p class="card-text">Track Book Authors and returns.</p>
          <a href="/bookAuthors" class="btn btn-primary">Go to Book Authors</a>
        </div>
      </div>
    </div>
  </div>
</div>
