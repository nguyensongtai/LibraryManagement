@model LibraryManagement.Models.Library

<h1 class="mb-4">Delete Library</h1>

<div class="alert alert-danger" role="alert">
  <h4 class="alert-heading">Are you sure you want to delete this library?</h4>
</div>

<dl class="row">
  <dt class="col-sm-2">Library Name</dt>
  <dd class="col-sm-10">@Model.LibraryName</dd>

  <dt class="col-sm-2">Address</dt>
  <dd class="col-sm-10">@Model.Address</dd>
</dl>

<form asp-action="Delete">
  <input type="hidden" asp-for="LibraryId" />
  <button type="submit" class="btn btn-danger">Delete</button>
  <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
