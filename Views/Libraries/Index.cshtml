@model IEnumerable<LibraryManagement.Models.Library>

<h1 class="mb-4">Libraries</h1>
<a asp-action="Create" class="btn btn-primary mb-3">Add New Library</a>

<table class="table table-bordered table-hover">
  <thead class="table-light">
    <tr>
      <th>Library Name</th>
      <th>Address</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    @if (Model != null && Model.Any())
    {
      @foreach (var library in Model)
      {
        <tr>
          <td>@library.LibraryName</td>
          <td>@library.Address</td>
          <td>
            <a asp-action="Details" asp-route-id="@library.LibraryId"
              class="btn btn-info btn-sm">Details</a>
            <a asp-action="Edit" asp-route-id="@library.LibraryId"
              class="btn btn-warning btn-sm">Edit</a>
            <a asp-action="Delete" asp-route-id="@library.LibraryId"
              class="btn btn-danger btn-sm">Delete</a>
          </td>
        </tr>
      }
    } else {
      <tr>
        <td colspan="4" class="text-center">No publishers available.</td>
      </tr>
    }
  </tbody>
</table>
