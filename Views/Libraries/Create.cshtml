@model LibraryManagement.Models.Library

<h1 class="mb-4">Create Library</h1>

<form asp-action="Create">
  <div class="mb-3">
    <label asp-for="LibraryName" class="form-label"></label>
    <input asp-for="LibraryName" class="form-control" />
    <span asp-validation-for="LibraryName" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label asp-for="Address" class="form-label"></label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
  </div>
  <button type="submit" class="btn btn-primary">Save</button>
  <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
