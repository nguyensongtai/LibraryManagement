@model IEnumerable<LibraryManagement.Models.BookCopy>

<h1>Book Copies</h1>
<a asp-action="Create" class="btn btn-primary">Add New Book Inventory</a>

<table class="table table-bordered table-hover mt-3">
  <thead class="table-light">
    <tr>
      <th>Book Title</th>
      <th>Library</th>
      <th>Quantity</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    @if (Model != null && Model.Any())
    {

      @foreach (var copy in Model)
      {
        <tr>
          <td>@copy.BookTitle?.Title</td>
          <td>@copy.Library?.LibraryName</td>
          <td>@copy.Quantity</td>
          <td>
            <a asp-action="Details" asp-route-bookTitleId="@copy.BookTitleId"
              asp-route-libraryId="@copy.LibraryId" class="btn btn-info btn-sm">Details</a>
            <a asp-action="Edit" asp-route-bookTitleId="@copy.BookTitleId"
              asp-route-libraryId="@copy.LibraryId" class="btn btn-warning btn-sm">Edit</a>
            <a asp-action="Delete" asp-route-bookTitleId="@copy.BookTitleId"
              asp-route-libraryId="@copy.LibraryId" class="btn btn-danger btn-sm">Delete</a>
          </td>
        </tr>
      }
    }
    else
    {
      <tr>
        <td colspan="4" class="text-center">No book copies available.</td>
      </tr>
    }
  </tbody>
</table>
