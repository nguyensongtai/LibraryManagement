@model LibraryManagement.Models.BookCopy

<h1>Delete Book Copy</h1>

<div>
  <h3>Are you sure you want to delete this book copy?</h3>
  <dl class="row">
    <dt class="col-sm-2">Book Title</dt>
    <dd class="col-sm-10">@Model.BookTitle?.Title</dd>
    <dt class="col-sm-2">Library</dt>
    <dd class="col-sm-10">@Model.Library?.LibraryName</dd>
    <dt class="col-sm-2">Quantity</dt>
    <dd class="col-sm-10">@Model.Quantity</dd>
  </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
  <input type="hidden" asp-for="BookTitleId" />
  <input type="hidden" asp-for="LibraryId" />
  <button type="submit" class="btn btn-danger">Delete</button>
  <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
