@model LibraryManagement.Models.BookLoan

<h1>Delete Book Loan</h1>
<hr />
<div>
  <h4>Are you sure you want to delete this loan?</h4>
  <dl class="row">
    <dt class="col-sm-2">Book Title</dt>
    <dd class="col-sm-10">@Model.BookTitle?.Title</dd>

    <dt class="col-sm-2">Library</dt>
    <dd class="col-sm-10">@Model.Library?.LibraryName</dd>

    <dt class="col-sm-2">Reader</dt>
    <dd class="col-sm-10">@Model.Reader?.Name</dd>

    <dt class="col-sm-2">Borrow Date</dt>
    <dd class="col-sm-10">@Model.BorrowDate.ToShortDateString()</dd>

    <dt class="col-sm-2">Return Date</dt>
    <dd class="col-sm-10">@Model.ReturnDate?.ToShortDateString()</dd>
  </dl>
  <form asp-action="Delete" method="post">
    <input type="hidden" name="bookTitleId" value="@Model.BookTitleId" />
    <input type="hidden" name="libraryId" value="@Model.LibraryId" />
    <input type="hidden" name="readerCardId" value="@Model.ReaderCardId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
  </form>
</div>
@if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
{
  <div class="alert alert-danger">
  @ViewData["ErrorMessage"]
</div>
}
