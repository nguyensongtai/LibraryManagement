@model LibraryManagement.Models.BookLoan

@{
  ViewData["Title"] = "Create Book Loan";
}

<h1>Create Book Loan</h1>

<form asp-action="Create" method="post">
  <div class="form-group">
    <label asp-for="BookTitleId" class="control-label mb-1">Book Title</label>
    <select asp-for="BookTitleId" class="form-select" asp-items="ViewBag.BookTitles"></select>
    <span asp-validation-for="BookTitleId" class="text-danger mt-1"></span>
  </div>
  <div class="form-group mt-3">
    <label asp-for="LibraryId" class="control-label mb-1">Library</label>
    <select asp-for="LibraryId" class="form-select" asp-items="ViewBag.Libraries"></select>
    <span asp-validation-for="LibraryId" class="text-danger mt-1"></span>
  </div>
  <div class="form-group mt-3">
    <label asp-for="ReaderCardId" class="control-label mb-1">Reader</label>
    <select asp-for="ReaderCardId" class="form-select" asp-items="ViewBag.Readers"></select>
    <span asp-validation-for="ReaderCardId" class="text-danger mt-1"></span>
  </div>
  <div class="form-group mt-3">
    <label asp-for="BorrowDate" class="control-label mb-1">Borrow Date</label>
    <input asp-for="BorrowDate" class="form-control" type="date" />
  </div>
  <div class="form-group mt-3">
    <label asp-for="ReturnDate" class="control-label mb-1">Return Date</label>
    <input asp-for="ReturnDate" class="form-control" type="date" />
  </div>
  <button type="submit" class="btn btn-primary mt-3">Save</button>
  <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>

@if (!ViewData.ModelState.IsValid)
{
  <div class="alert alert-danger mt-3">
  <ul>
    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
      {
        <li>@error.ErrorMessage</li>
      }
    </ul>
  </div>
}
